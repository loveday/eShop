<!DOCTYPE html>
<html>
    <head>
      <title>Loveday & Yuliya Online eShop</title>
      <%= stylesheet_link_tag    "application", :media => "all" %>
      <%= javascript_include_tag "application" %>
      <%= csrf_meta_tag %>
    </head>
    <body class='<%= controller.controller_name %>'>
        <div id="banner" >
          <%= image_tag("logo.jpg")%>
          <%= @page_title || "Loveday & Yuliya Online Shop" %>
        </div>
        <div id="columns">
          <div id="side">
            <div id="cart">
              <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                  <%= render @cart %>
              <% end %>
            </div>
            <ul>
              <li><%= link_to "Home", store_path %></li>
              <li><a href="products">Products</a> </li>
              <li><a href="carts">Your Cart</a> </li>
              <li><a href="#">News</a></li>
              <li><a href="#">FAQ</a></li>
              <li><a href="#">Contact</a></li>
            </ul>
          </div>
          <div id="main">

            <%= yield %>
          </div>
        </div>
    </body>
</html>
